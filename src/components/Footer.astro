---
import { Icon } from "astro-icon/components";
import Link from "@components/Links.astro";
import { BRAND_NAME, FooterLinks, SocialLinks } from "@consts";
const today = new Date();
---
<style>
  @media (max-width: 1024px) {
    .footer-wrapper {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      gap: 1rem !important;
    }
    .footer-left,
    .footer-center,
    .footer-right {
      text-align: center !important;
      justify-self: center !important;
    }
  }
</style>
<footer class="mt-auto w-full max-w-[85rem] py-10 mx-auto">
  <nav class="mx-auto w-full max-w-[85rem] px-4" aria-label="Footer">
    <div class="footer-wrapper" style="display: grid; grid-template-columns: 1fr auto 1fr; align-items: center; gap: 2rem;">
      <!-- Left: Brand -->
      <div class="footer-left" style="text-align: left; justify-self: start;">
        <a class="flex-none text-sm text-neutral-500 hover:text-neutral-800 dark:text-neutral-500 dark:hover:text-neutral-200" href="/" aria-label="Brand"
          >{BRAND_NAME} &copy; {today.getFullYear()}</a
        >
      </div>

      <!-- Center: Footer Links -->
      <div class="footer-center" style="text-align: center; justify-self: center;">
        <div class="flex flex-row gap-5 items-center flex-wrap justify-center">
          {
            FooterLinks.map((link) => (
              <Link
                href={link.href}
                class="inline-flex gap-x-2 text-sm text-neutral-500 hover:text-neutral-800 dark:text-neutral-500 dark:hover:text-neutral-200"
              >
                {link.title}
              </Link>
            ))
          }
        </div>
      </div>

      <!-- Right: Social Links -->
      <div class="footer-right" style="text-align: right; justify-self: end;">
        {
          SocialLinks.map((link) => (
            <button
              type="button"
              class="relative inline-flex h-12 w-12 items-center gap-x-2 bg-white px-4 py-3 text-neutral-500 hover:text-neutral-800 disabled:pointer-events-none disabled:opacity-50  dark:text-neutral-500 dark:hover:text-neutral-200 dark:bg-neutral-900 dark:hover:bg-neutral-900"
            >
              <a
                href={link.href}
                class="absolute inset-0 z-10"
                aria-label={link.label}
              />
              <Icon name={link.icon} class="icon-base" />
            </button>
          ))
        }
      </div>
    </div>
  </nav>
</footer>